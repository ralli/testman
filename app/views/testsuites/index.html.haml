- title "Testsuites"

- content_for :head do
  :css
    div.row {
      margin-bottom: 1em;
    }

.row.span-24.last
  = form_tag(search_testsuites_path , :method => 'get') do
    %fieldset.span-24.last
      %legend Search
      .fieldset
        .row.span-15
          = label_tag(:q, 'Search: ')
          = text_field_tag(:q, params[:q])
          = submit_tag 'Search', :id => 'search'
          = "#{@testsuites.total_entries} Testsuites found"
        .row.right
          = link_to "New Testsuite", new_testsuite_path, :id => 'new_testsuite', :class => 'button_add'

%table
  %thead
    %tr
      %th Key
      %th Version
      %th Name
      %th Action
  %tbody
    - @testsuites.each do |testsuite|
      %tr
        %td= testsuite.key
        %td= testsuite.version
        %td= testsuite.name
        %td
          = link_to "Show", testsuite, :id => 'show_testsuite'
          = link_to "Edit", edit_testsuite_path(testsuite), :id => 'edit_testsuite'
          = link_to 'Run', run_testsuite_path(testsuite), :id => 'run_testsuite'
          = link_to "Delete", testsuite, :method => 'delete', :confirm => 'Are you sure?', :id => 'delete_testsuite'

= will_paginate @testsuites

