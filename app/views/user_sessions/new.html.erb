<h1>Login</h1>
<%= semantic_form_for @user_session, :url => url_for(:action => 'create') do |f| %>
  <% f.inputs do %>
    <%= f.input :login %>
    <%= f.input :password %>
  <%end%>
  <% f.buttons do %>
    <%= f.commit_button 'Login' %>
    <li class="cancel"><%= link_to 'Cancel', root_url %></li>
  <% end %>
<% end %>